---
import { useTranslations } from '../i18n/utils';
    const lang = 'en';
    const t = useTranslations(lang);
    const pageTitle = t('meta.title_404_page');
    const pageDescription = t('meta.page_description_404');
    
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preload" href="/font/AmaticSC-Regular.ttf" as="font" type="font/ttf" crossorigin>
		<link rel="preload" href="/font/AmaticSC-Bold.ttf" as="font" type="font/ttf" crossorigin>
		<title>{pageTitle}</title>
		<meta name="description" content={pageDescription} />
		<link rel="alternate" hreflang="sr" href="https://salonacika.com/sr/" />
		<link rel="alternate" hreflang="sr-Latn" href="https://salonacika.com/sr-latn/" />
		<link rel="alternate" hreflang="en" href="https://salonacika.com/en/" />
		<link rel="alternate" hreflang="de" href="https://salonacika.com/de/" />
		<link rel="alternate" hreflang="x-default" href="https://salonacika.com/sr-latn/" />
	</head>
	<body>
<section class='container'> 

    <div class="img-container">
        <img src="/not-found.webp"/>
    </div>
    <div class=' text-container'>
        <h1 >{t('meta.title_404_page')}</h1>
        <h2 >{t('meta.page_description_404')}</h2>
        <div class='btn-container'>

            <a class='btn-primary' href={"/" + lang + '/services'}>{t('common.view_services')}</a>
            <a class='btn-secondary' href={"/" + lang + '/'}>Go to the Home page</a>
        </div>
    </div>

</section>  
	</body>
</html>

<style>

    body,html{
        padding: 1rem;
        background-color: #f5f1e8;

        margin: 0;
        width: 100vw;
        height: 100vh;
    }
    .btn-container{
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 2rem;
        justify-content: center;
        align-items: center;
        font-size: 1.5rem;
    }
    .text-container{
        text-align: center;
       padding: 1rem;
       color: #595959;
       
    }
    .text-container > h1{
        font-size: 2.3rem;
        font-style: italic;
    }
    .text-container > h2{
        font-size: 1.5rem;
        font-style: italic;

    }
    .btn-primary{
        width: fit-content;
         padding: 0.5rem 1rem;
        border: 1px solid black;
        border-radius: 1rem;
        background-color: #d4869c;
        text-decoration: none;
        text-transform: uppercase;
        color: white;
        max-width: fit-content;
    }
    .btn-secondary{
        padding: 0.5rem 1rem;
        border: 1px solid black;
        border-radius: 1rem;
        background-color: #e8b8a3;
        text-decoration: none;
        text-transform: uppercase;
        color: white;
        max-width: fit-content;

    }
    @media (max-width: 768px) {
    .text-container > h1 {
      
        font-size: 1.2rem;
        
    }

    .text-container > h2 {
       
       
        font-size: 1rem;
    }
    }
    .container{
        font-family: 'Amatic SC', cursive;
        display: flex;
        flex-direction: column;
        align-items: center;
        align-self: center;
        justify-content: center;
        margin: 0;
        padding: 0;
        background-color: #f5f1e8;
        height: 100%;
       
       
  
    }
    img{
        width: 100%;
        height: 100%;
    }
    .img-container {
        position: relative;;
        
        display: flex;
        object-fit: fill;
        justify-content: center;
        align-items: center;
    }


</style>